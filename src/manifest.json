{
  "default_locale": "de",
  "name": "__MSG_extensionName__",
  "description": "Bookmarkbar backend",
  "permissions": ["storage", "activeTab", "bookmarks", "chrome://favicon/*/"],
  "content_security_policy": "img-src chrome://favicon/;",
  "background": {
    "scripts": ["background/main.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/browser-action-16.png",
      "24": "icons/browser-action-24.png",
      "32": "icons/browser-action-32.png"
    },
    "default_title": "Lesezeichen"
  },
  "options_page": "options/index.html",
  "web_accessible_resources": [
    "content/main.css",
    "options/index.html",
    "fonts/*"
  ],
  "manifest_version": 2
}
